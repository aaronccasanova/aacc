{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",

  "compilerOptions": {
    // Outputs
    // Disabled because:
    // - https://github.com/sindresorhus/tsconfig/blob/main/tsconfig.json
    // - https://github.com/Microsoft/TypeScript/issues/29172
    // "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "newLine": "lf",
    "stripInternal": true,
    "noEmitOnError": true,

    // Strictest
    // https://github.com/tsconfig/bases/blob/main/bases/strictest.json
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Compatibility
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // Convenience
    "resolveJsonModule": true,
    "moduleResolution": "node16", // Required for json resolution
    "moduleDetection": "force",
    "jsx": "react",
    "pretty": true

    // References:
    // - https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    // - https://github.com/tsconfig/bases
    // - https://github.com/sindresorhus/tsconfig
  }
}
